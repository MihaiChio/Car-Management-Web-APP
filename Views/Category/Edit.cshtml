@model WebApplication1MVC.Models.Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span> @*validation only for name.*@
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="displayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="displayOrder" class="form-control" />
                        <span asp-validation-for="displayOrder" class="text-danger"></span>  @*validation only for order.*@
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-outline-primary w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class=" btn btn-outline-primary w-100">Back</a> @*no controller needs to be mentioned when going on the same page. *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @*inside the validation script partial we have the js scripts.This will help with the client side validation*@

    @{
        <partial name="_ValidationScriptsPartial" />
     }
}
