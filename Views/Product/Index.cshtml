@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Upsert" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" stype="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.name</td>
                        <td width="30%">@obj.price</td>
                        <td width="50%" >@obj.category.name</td>
                        <td class="text-center">
                            <div class="w-auto btn-group" role="group">
                                <a asp-route-id="@obj.id" asp-action="Upsert" class="btn btn-outline-primary w-auto ">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @*the asp-route-[name] will have to match the function paramter in the controller. Don't ask why.'*@
                                <a  asp-route-id="@obj.id" asp-action="Delete" class="btn btn-outline-danger w-auto">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products exists at the moment, check back later.</p>
    }

</div>

