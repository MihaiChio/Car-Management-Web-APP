@model WebApplication1MVC.Models.ApplicationType

<form method="post">
    <input hidden asp-for="iD"  />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*this is for validation Model only will display the errors wherever the validation form is called while all will display it on the page.*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span> @*validation only for name.*@
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-100" value="Edit Type" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class=" btn btn-outline-primary w-100">Back</a> @*no controller needs to be mentioned when going on the same page. *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @*inside the validation script partial we have the js scripts.This will help with the client side validation*@

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
