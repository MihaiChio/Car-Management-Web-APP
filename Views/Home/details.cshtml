@model WebApplication1MVC.Models.ViewModels.detailsVM

<div class="">
    <form method="post">

        <div class="container background: bg-white pt-4">
            <div class="card" style="border:1px solid #000000;">
                <div class="card-header bg-dark text-light ml-0 row container " style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.product.name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right ">
                        <h1 class="text-warning">@((Model.product.price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WebConstants.imagePath@Model.product.imagePath" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.product.category.name</span>
                                        <span class="badge p-3 border" style="background-color:azure">@Model.product.applicationType.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.product.description)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.isInCart)
                            {
                                //if in the cart already, we can remove it.
                                <a asp-action="removeFromCart" asp-route-id="@Model.product.id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remove vehicle</a>
                            }
                            else
                            {
                            <button type="submit" asp-route-id="@Model.product.id" class=" btn btn-info form-control btn-lg" style="height:50px;">Buy Vehicle</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>